<%- include('partials/header') -%>

<body>
    

<div data-aos="fade-right" data-aos-duration="1000" class="aboutpage4"> </div>

<div data-aos="fade-up" data-aos-duration="1700"  class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Blogs.</h1>
    <p class="lead">Here where i write about what interest me </p>
    <p class="lead "> <strong>Enjoy Reading.</strong></p>
    <a class="btn btn-info btn-lg" href="blogs/new" role="button">Add a Blog.</a>
  </div>
</div>
<div class="container"></div>

<div>

<% blogs.forEach(function(Blog){%>
<div class="container">
  
<div data-aos="fade-left" data-aos-duration="1000" class="card mb-3">
  <img class="card-img-top" src="<%=Blog.image%>" alt="Card image cap"> 
    <h4 class="card-title"> <%= Blog.title %> </h4>
    <p class="card-text"> <%- Blog.body.substring(0,190) %>... </p>
       <p class="card-text"> <%= Blog.author %> </p>
    <a class="btn btn-primary " href="/blogs/<%=Blog._id%>" role="button">Read more.</a>
    
    <p class="card-text"><small class="text-muted"> Created : <%= Blog.date %></small></p>
  </div>
  
  </div>
  
</div>


</div>

<% }); %>








<%- include('partials/footer') -%>


