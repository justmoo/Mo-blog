<%- include('partials/header')-%>

<body>
    
<div id="login-page" class="container">
            <form class="form-signin" action="/login" method="post">
             
             <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
              <label for="username" class="sr-only">username</label>
              <input type="text" id="username" class="form-control" placeholder="username" required autofocus name="username">
              <label for="inputPassword" class="sr-only">Password</label>
              <input type="password" id="inputPassword" class="form-control mt-2" placeholder="Password" required name="password">
              <div class="checkbox mb-3">
                <label>
                  <input type="checkbox" value="remember-me"> Remember me
                </label>
              </div>
              <button class="btn btn-info btn-lg btn-block" type="submit">Sign in</button>
              <p class="mt-5 mb-3 text-muted">&copy; 2019</p>
            </form>
</div>
    
    


